                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    </FrameLayout>

                    <androidx.recyclerview.widget.RecyclerView android:visibility="@{vm.concentrationAdapterCount>0?View.VISIBLE:View.GONE}"
                        android:id="@+id/vconcentrationGridLayoutManager"
                        adapter="@{vm.concentrationAdapter}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:minHeight="190dp"
                        android:layout_marginStart="10.5dp"
                        android:layout_marginEnd="10.5dp"
                        android:layout_marginBottom="14dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:spanCount="2" />

                    <LinearLayout
                        android:id="@+id/hotSaleBar"
                        android:layout_width="match_parent"
