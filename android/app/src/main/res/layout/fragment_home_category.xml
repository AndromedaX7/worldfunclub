                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:background="#FFF">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"

                                android:paddingTop="9dp"
                                android:paddingBottom="9dp"
                                android:text="途乐会用户规范>"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/ic_banner_rule" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:background="@mipmap/ic_rule_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"

                                android:paddingTop="9dp"
                                android:paddingBottom="9dp"
                                android:text="新人上路指南>"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/ic_banner_rule" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/timeSK"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="@drawable/shape_white_card2"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="14dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/ic_time" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="限时"
                                android:textColor="#E33542"
                                android:textSize="18sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="爆款秒杀"
                                android:textColor="#333333"
                                android:textSize="18sp"
                                android:textStyle="bold|italic" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="距秒杀结束还剩"
                                android:textColor="#333333"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:background="@drawable/shape_time_bg"
                                android:text="99"
                                android:textColor="#333333"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/minute"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_time_bg"
                                android:text="59"
                                android:textColor="#333333"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="6dp"
                                android:text=":" />

                            <TextView
                                android:id="@+id/second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:background="@drawable/shape_time_bg"
                                android:text="59"
                                android:textColor="#333333"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            adapter="@{vm.discountAdapter}"
                            android:layout_width="match_parent"
                            android:layout_height="68dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView android:visibility="@{vm.seckillAdapterCount>0?View.VISIBLE:View.GONE}"
                        android:id="@+id/vlinearLayoutManager"
                        adapter="@{vm.seckillAdapter}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="@drawable/shape_white_card3"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginEnd="6dp"
                            android:src="@mipmap/don" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大牌精选"
                            android:textColor="#333333"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_marginStart="6dp"
                            android:src="@mipmap/don" />
