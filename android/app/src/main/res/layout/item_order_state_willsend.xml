<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.ds.worldfunclub.base.ExtensionsKt"/>
        <variable
            name="data"
            type="com.ds.worldfunclub.responsebean.OrderList.DataBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计支付"
            android:textColor="#333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/yuan+ExtensionsKt.toYuan(ExtensionsKt.stringToDouble(data.goods_money))}"
            android:textColor="#FF354D"
            android:textSize="16sp" />
    </LinearLayout>
</layout>