<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.ds.worldfunclub.ui.delegate.MainEntryDelegate" />
        <variable
            name="data"
            type="com.ds.worldfunclub.responsebean.HomeCategory.DataBean.ChildBean" />
    </data>

    <LinearLayout android:onClick="@{(v)->vm.onTap(v,data)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            height='@{data.type== 1?50:25}'
            imgX='@{data.res == 0?data.image.file_path:data.res+""}'
            width='@{data.type==1 ?50:25}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:layout_marginTop="8dp" android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.name}"
            android:textColor="#333333" />
    </LinearLayout>
</layout>