<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin">

    <data>

        <import type="com.ds.worldfunclub.base.GlobalStyle" />

        <import type="android.view.View" />

        <variable
            name="ac"
            type="android.app.Activity" />

        <variable
            name="vm"
            type="com.ds.worldfunclub.viewmodel.EvaluationModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundMain"
        android:orientation="vertical"
        skin:enable="true">

        <FrameLayout android:background="@color/colorToolbar"
            status="@{ac}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/colorToolbar"
            android:paddingBottom="14dp"
            skin:enable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:onClick="@{()->ac.finish()}"
                android:padding="8dp"
                android:src="@mipmap/ic_back2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:onClick="@{()->vm.commit()}"
                android:padding="8dp"
                android:text="提交" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人资料"
                android:textColor="@color/colorToolbarText"
                android:textSize="16sp"
                android:transitionName="@string/tran_app_title" />
        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/shape_white_card"
                android:minHeight="400dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="14dp">

                    <ImageView
                        img="@{vm.image}" android:scaleType="fitXY"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="14dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{vm.goodsName}"
                            android:textColor="#FF333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/starBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:numStars="5"
                            android:isIndicator="false"
                            android:rating="4"
                            android:textColor="#FF333333"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:gravity="start"
                    android:hint="从多个角度评价宝贝，可以帮助更多想要买的人"
                    android:text="@={vm.content}" />

                <androidx.recyclerview.widget.RecyclerView
                    adapter="@{vm.adapter}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="3" />

                <LinearLayout android:onClick="@{()->vm.selectFun()}" android:gravity="center_vertical"
                    android:layout_width="wrap_content" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
                    android:layout_height="wrap_content">
                    <ImageView selectView="@{vm.select}"
                        android:layout_width="18dp"
                        android:layout_height="18dp" android:src="@drawable/selector_select_address"/>
                    <TextView
                        android:layout_width="wrap_content" android:layout_marginStart="8dp"
                        android:layout_height="wrap_content" android:text="匿名评价"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>