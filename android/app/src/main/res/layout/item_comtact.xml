<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.ds.worldfunclub.ui.delegate.ContactDelegate" />
        <variable
            name="pos"
            type="int" />
        <variable
            name="data"
            type="String" />
    </data>

    <LinearLayout
        android:orientation="vertical" android:onClick="@{(v)->vm.call(data)}"
        android:layout_width="match_parent"
        android:layout_height="42dp">
        <TextView android:textSize="16sp" android:textStyle="bold"
            android:layout_width="match_parent" android:gravity="center_vertical"
            android:layout_height="match_parent"  android:layout_marginStart="32dp"
            android:text="@{@string/customer+(pos+1)}"/>


    </LinearLayout>
</layout>