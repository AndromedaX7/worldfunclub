<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="adapter"
            type="com.ds.worldfunclub.base.MultiTypeAdapter" />
        <variable
            name="vm"
            type="com.ds.worldfunclub.viewmodel.GoodsDetailsModel" />
        <variable
            name="pos"
            type="int" />
        <variable
            name="data"
            type="com.ds.worldfunclub.responsebean.GoodsDetailsResp2.DataBean.SpecAttrBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{data.group_name}"
                android:layout_marginBottom="7.5dp"
                android:textColor="#333333"
                android:textSize="16sp" />

            <com.ds.worldfunclub.widget.FlowLayout
                android:layout_width="match_parent" android:id="@+id/flow"

                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</layout>