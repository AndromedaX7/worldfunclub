<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.ds.worldfunclub.base.ExtensionsKt"/>
        <variable
            name="vm"
            type="com.ds.worldfunclub.ui.delegate.AbsOrderDelegate" />

        <variable
            name="orderId"
            type="String" />

        <variable
            name="goods"
            type="com.ds.worldfunclub.responsebean.OrderList.DataBean.GoodsBean" />
    </data>


<!--     android:onClick="@{(v)->vm.goodsDetails(v,goods.id)}"-->

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/goodsBanner"
                img="@{goods.image}"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{goods.goods_name}"
                    android:textColor="#333333"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{goods.goods_attr}"
                    android:textColor="#A9A9A9"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/goodsPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/yuan+ExtensionsKt.toYuan(ExtensionsKt.stringToDouble(goods.goods_price))}"
                        android:textColor="#333333"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"x"+goods.total_num}'
                        android:textColor="#A9A9A9"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_will_pay"
                android:text="确认收货"
                android:textColor="#FF354D" />
            <TextView android:layout_marginStart="14dp" android:onClick="@{(v)->vm.express(v,orderId,goods.order_goods_id)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_order_will_che"
                android:text="查看物流"
                android:textColor="#FF777777" />
        </LinearLayout>
    </LinearLayout>

</layout>