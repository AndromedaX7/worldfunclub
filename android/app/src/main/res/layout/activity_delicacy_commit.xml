<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin">

    <data>

        <import type="com.ds.worldfunclub.base.GlobalStyle" />

        <import type="android.view.View" />

        <import type="com.ds.worldfunclub.base.ExtensionsKt" />

        <import type="com.ds.worldfunclub.app.PubFunction" />

        <variable
            name="ac"
            type="android.app.Activity" />

        <variable
            name="vm"
            type="com.ds.worldfunclub.viewmodel.DelicacyCommitModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundMain"
        android:orientation="vertical"
        skin:enable="true">

        <FrameLayout
            status="@{ac}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/colorToolbar"
            android:paddingBottom="14dp"
            skin:enable="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:onClick="@{()->ac.finish()}"
                android:padding="8dp"
                android:src="@mipmap/ic_back2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="个人资料"
                android:textColor="@color/colorToolbarText"
                android:textSize="16sp"
                android:transitionName="@string/tran_app_title" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundMain">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_white_card"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="14dp"
                                android:src="@drawable/selector_select_address" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:background="@drawable/shape_white_card"
                                android:gravity="center_vertical">


                                <ImageView

                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/banner2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text=" {data.shopName}"
                                    android:textColor="#010101" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:background="@drawable/shape_ziying_bound"
                                    android:text="自营"
                                    android:textColor="#FFF"
                                    android:textSize="10sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"

                                    android:background="@drawable/shape_cart_collect_coupons"
                                    android:text="领劵"
                                    android:textColor="#FFF"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="14dp"
                                android:layout_weight="1">

                                <ImageView
                                    img="@{vm.goods_image}"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:scaleType="fitXY" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="18dp"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="8dp"
                                            android:layout_weight="1"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:text="@{vm.goods_name}"
                                            android:textColor="#000"
                                            android:textSize="14sp">

                                        </TextView>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="8dp"
                                            android:text='@{"x"+vm.total_num}'
                                            android:textColor="#000"
                                            android:textSize="14sp">

                                        </TextView>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:ellipsize="start"
                                        android:singleLine="true"
                                        android:text="@{vm.goods_attr}"
                                        android:textColor="#AAAAAA"
                                        android:textSize="12sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text='@{@string/yuan+ExtensionsKt.toYuan(ExtensionsKt.stringToDouble(vm.goods_price))}'
                                            android:textColor="#E33542" />

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_weight="1" />


                                        <FrameLayout
                                            enabled="@{PubFunction.toInt(vm.total_num)>1}"
                                            android:layout_width="25dp"
                                            android:layout_height="22dp"
                                            android:background="@drawable/cart_sub"
                                            android:onClick="@{()->vm.operationGoodsCount(false )}">

                                            <ImageView
                                                selectImg="@{PubFunction.toInt(vm.total_num)>1}"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_cart_sub" />
                                        </FrameLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="22dp"
                                            android:background="@drawable/cart_count"
                                            android:gravity="center"
                                            android:minWidth="32dp"
                                            android:text="@{vm.total_num}"
                                            android:textColor="#333333" />

                                        <FrameLayout
                                            enabled="@{PubFunction.and(PubFunction.toInt(vm.total_num)>=1,PubFunction.xy  (PubFunction.toInt(vm.total_num) ,  PubFunction.toInt( vm.stock_num)))}"
                                            android:layout_width="25dp"
                                            android:layout_height="22dp"
                                            android:background="@drawable/cart_add"
                                            android:onClick="@{()->vm.operationGoodsCount(true )}">

                                            <ImageView
                                                selectImg="@{PubFunction.and(PubFunction.toInt(vm.total_num)>=1,PubFunction.xy  (PubFunction.toInt(vm.total_num) ,  PubFunction.toInt( vm.stock_num)))}"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_cart_add" />
                                        </FrameLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/shape_white_card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:src="@mipmap/goods_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:text="环球途乐会官方旗舰店"
                            android:textColor="#010101"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_ziying_bound"
                            android:text="自营"
                            android:textColor="#FFF"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="14dp"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:text="小计："
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="#E33542"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{vm.count_price.split("\\.")[0]}'
                            android:textColor="#E33542"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="14dp"
                            android:text='@{"."+vm.count_price.split("\\.")[1]}'
                            android:textColor="#E33542"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/shape_white_card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            android:text="姓名" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end|center_vertical"
                            android:hint=""
                            android:text="@={vm.name}" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="#FFD8D8D8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            android:text="手机号" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="end|center_vertical"
                            android:hint=""
                            android:text="@={vm.phone}" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="#FFD8D8D8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            android:text="预约时间" />

                        <TextView android:onClick="@{()->vm.showDate()}"
                            android:layout_width="0dp" android:hint="点击选择预约时间" android:gravity="end|center"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp" android:text="@{vm.subscribeDate}"
                            android:layout_weight="1"
                            android:background="@null" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="14dp"
                            android:text="备注" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="98dp"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="14dp"
                            android:layout_marginBottom="14dp"
                            android:layout_weight="1"
                            android:background="#FFF5F5F5"
                            android:gravity="top"
                            android:hint="选填"
                            android:padding="8dp"
                            android:text="@={vm.remark}" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="14dp"
                        android:background="#FFD8D8D8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginEnd="14dp"
                            android:text="实付金额" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="14dp"
                            android:layout_weight="1" android:textSize="16sp" android:textColor="#FFE33542"
                            android:gravity="end|center_vertical"
                            android:text="@{@string/yuan+vm.count_price}" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/shape_white_card"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="支付方式" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:onClick="@{()->vm.clickPayType(1)}">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/ic_wechat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="微信支付"
                            android:textColor="#333333" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            selectImg="@{1 == vm.selectPayType}"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/selector_select_address" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="45dp"
                        android:background="#F5F5F5" />

                    <LinearLayout android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:onClick="@{()->vm.clickPayType(2)}">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/ic_tangzhu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="支付宝"
                            android:textColor="#333333" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            selectImg="@{2 == vm.selectPayType}"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/selector_select_address" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="45dp"
                        android:background="#F5F5F5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:onClick="@{()->vm.clickPayType(3)}">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@mipmap/ic_app_pay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="途乐币"
                            android:textColor="#333333" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            selectImg="@{3 == vm.selectPayType}"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/selector_select_address" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="14dp" android:onClick="@{(v)->vm.buy(v)}"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/delicacy_commit_btn"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{@string/yuan+vm.count_price}"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单支付"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>