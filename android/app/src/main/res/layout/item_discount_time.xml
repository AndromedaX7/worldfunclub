<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="pos"
            type="int" />

        <import type="com.ds.worldfunclub.app.PubFunction" />

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.ds.worldfunclub.ui.delegate.DiscountDelegate" />

        <variable
            name="data"
            type="com.ds.worldfunclub.responsebean.DiscountList.DataBean" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:gravity="center"
        android:onClick="@{()->vm.onSelected(pos,data)}"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            selectView='@{ pos==vm.selected}'
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@{data.show_start_time}"
            android:textColor="@color/selector_discount_color"
            android:textSize='@{pos==vm.selected?@dimen/selectDiscount:@dimen/unSelectDiscount  }' />

        <TextView
            selectView='@{pos==vm.selected}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:textColor="@color/selector_discount_color"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="30dp"
            android:layout_height="2.5dp"
            android:background="@drawable/shape_discount_selected_bar"
            android:visibility='@{pos==vm.selected?View.VISIBLE:View.GONE}' />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp" />
    </LinearLayout>
</layout>