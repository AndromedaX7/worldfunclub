<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin">

    <data>

        <variable
            name="ac"
            type="android.app.Activity" />

        <variable
            name="vm"
            type="com.ds.worldfunclub.viewmodel.LiveFragmentModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <FrameLayout
            status="@{ac}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorToolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/colorToolbar"
            android:gravity="center_vertical"
            skin:enable="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="长春"
                android:textColor="@color/colorToolbarText"
                android:textSize="16sp"
                skin:enable="true" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="14dp"
                android:src="@mipmap/ic_expand" />

            <LinearLayout
                android:id="@+id/bound"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7.5dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="7.5dp"
                android:layout_weight="1"
                android:background="@drawable/shape_search_bg"
                android:gravity="center_vertical"
                android:onClick="@{(v)->vm.openSearch(v)}">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="14dp"
                    android:src="@mipmap/ic_search" />

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索商品名称"
                    android:textColor="#999999"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:tabMode="scrollable"
            android:background="@color/colorToolbar"
            app:tabIndicatorColor="@color/colorRefreshIndicator"
            app:tabSelectedTextColor="@color/colorRefreshIndicator" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>