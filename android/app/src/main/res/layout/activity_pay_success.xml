<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ac"
            type="com.ds.worldfunclub.ui.activity.order.PaySuccessActivity" />

        <variable
            name="vm"
            type="com.ds.worldfunclub.viewmodel.PaySuccessModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF2F2F2"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="266dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="266dp"
                        android:background="@mipmap/pay_success_bg" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/pay_success_circual_bar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="75dp"
                        android:text="支付成功"
                        android:textColor="#FFFFFFFF"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="115dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实付 ￥"
                            android:textColor="#FFFFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{ac.pay}"
                            android:textColor="#FFFFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="95dp"
                        android:layout_marginEnd="96dp"
                        android:src="@mipmap/pay_success_check" />

                    <ImageView
                        android:layout_width="264dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="155dp"
                        android:src="@mipmap/pay_success_line" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="70dp"
                        android:layout_marginBottom="65dp"
                        android:background="@drawable/pay_success_order"
                        android:gravity="center"
                        android:onClick="@{()->vm.order(ac.orderType)}"
                        android:text="查看订单"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="65dp"
                        android:background="@drawable/pay_success_home"
                        android:gravity="center"
                        android:onClick="@{()->vm.home()}"
                        android:text="返回首页"
                        android:textColor="#FFF42515"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:onClick="@{()->vm.home()}"
                        android:padding="4dp"
                        android:text="完成"
                        android:textColor="#FFFFFFFF"
                        android:textSize="16sp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp"
                        android:text="为你推荐"
                        android:textColor="#FF333333"
                        android:textSize="16sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        adapter="@{vm.adapter}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="10.5dp"
                        android:paddingEnd="10.5dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>